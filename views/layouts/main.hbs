<!doctype html>

<head>
  <meta charset="utf-8">
  <title>IECP - Cantina</title>
  <base href="/">

  <link rel="apple-touch-icon" sizes="180x180" href="/images/favicon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon/favicon-16x16.png">
  <link rel="manifest" href="/images/favicon/site.webmanifest">
  <link rel="mask-icon" href="/images/favicon/safari-pinned-tab.svg" color="#5bbad5">
  <link rel="shortcut icon" href="/images/favicon/favicon.ico">
  <meta name="apple-mobile-web-app-title" content="IECP Cantina">
  <meta name="application-name" content="IECP Cantina">
  <meta name="msapplication-TileColor" content="#404c5d">
  <meta name="msapplication-config" content="/images/favicon/browserconfig.xml">
  <meta name="theme-color" content="#404c5d">

  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!--Import materialize.css-->
  <link type="text/css" rel="stylesheet" href="/styles/materialize.min.css" media="screen,projection" />
  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.18/r-2.2.2/datatables.min.css" />
  <link rel='stylesheet' href='/styles/style.css' />
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"
    integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
</head>

<body>
  <header>
    <div class="container"><a href="#" data-target="nav-mobile"
        class="top-nav sidenav-trigger waves-effect waves-light circle hide-on-large-only"><i
          class="material-icons">menu</i></a></div>
    <ul id="nav-mobile" class="sidenav sidenav-fixed">
      <li>
        <div class="user-view">
          <img id="comp-iqawsv8timgimage"
            style="object-position: 50% 50%; width: 115px; height: 91px; object-fit: cover;" alt="" data-type="image"
            itemprop="image" src="images/logo.png">
          <span class="white-text name">Sistema Cantina 1.0</span>
        </div>
      </li>
      <li><a href="/clients" class="white-text"><i class="material-icons white-text">person</i>Clientes</a></li>
      <li><a href="/products" class="white-text"><i class="material-icons white-text">all_inbox</i>Produtos</a></li>
      <li><a href="/payments" class="white-text"><i class="material-icons white-text">attach_money</i>Pagamentos</a>
      </li>
      <li><a href="/orders" class="white-text"><i class="material-icons white-text">history</i>Vendas</a></li>
      <li><a href="/orders/create" class="white-text"><i class="material-icons white-text">shopping_cart</i>Caixa</a>
      </li>
      <li><a href="/login/logout" class="white-text"><i class="material-icons white-text">exit_to_app</i>Sair</a></li>
    </ul>
  </header>
  <main>
    <div class="section grey lighten-2 text-blue">
      <div class="container">
        <div class="row" style="margin-bottom: 0; position: relative">
          <div class="col s12 center-on-large-only">
            <h5 class="light" style="margin: 0px !important; line-height:36px; ">{{title}}</h5>
          </div>
          {{#if showReturn}}
          <div style="position: absolute; right: 0">
            <a class="btn-flat text-blue" onclick="goBack()"><i class="material-icons left">arrow_back</i>Voltar</a>
          </div>
          {{/if}}
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col s12" style="margin-top: 20px; padding: 0px">
          {{{body}}}
        </div>
      </div>
    </div>
  </main>
  {{!-- <footer class="page-footer">

  </footer> --}}
</body>
<!--JavaScript at end of body for optimized loading-->
<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/r-2.2.2/datatables.min.js"></script>
<script type="text/javascript" src="/scripts/materialize.min.js"></script>
<script src="/scripts/jquery.mask.min.js"></script>
<script>
  function goBack() {
    window.history.back();
  }

  (function ($) {
    $(function () {

      $('.sidenav').sidenav();

    }); // end of document ready
  })(jQuery); // end of jQuery name space

  $(document).ready(function () {
    $('select').formSelect();
    $('.tooltipped').tooltip();
    $('.modal').modal();

    var message = localStorage.getItem("message", "Cliente salvo com sucesso!");
    if (message) {
      M.toast({ html: message });
      localStorage.removeItem("message");
    }
  });
</script>

</html>